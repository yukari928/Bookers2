<%= render 'list', users: @users, book: @book %>

    <div class="col-md-8 offset-md-1">

      <h2>Books</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <% @users.each do |user| %>
                <% if user == book.user %>
                  <%= link_to user_path(user.id) do %>
                    <%= image_tag user.get_profile_image(100,100) %>
                  <% end %>
                <% end %>
              <% end %>
            </td>
            <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>