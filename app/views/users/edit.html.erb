<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 mx-auto">

    <h2>User info</h2>

    <% if @user.errors.any? %>
      <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>


    <%= form_with model: @user do |f| %>

    <div class="form-group">
      <label for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
    </div>
    <div  class="form-group">
      <label for="inputImage">Image</label>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>
    <div  class="form-group">
      <label for="inputName">Introduction</label>
      <%= f.text_field :introduction %>
    </div>
    <div  class="form-group">
      <%= f.submit 'Update User', class: "col-xs-12 btn btn-secondary" %>
    </div>

    <% end %>

    </div>
  </div>
</div>